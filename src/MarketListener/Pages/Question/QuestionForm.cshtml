@using MarketListener.ViewModels.Question;
@model EditQuestionViewModel;

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="@Model.Question.Title">Title</label>
        <input asp-for="@Model.Question.Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Question.Text">Text</label>
        <input asp-for="@Model.Question.Text" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Question.QuestionType">Question Type</label>
        <select asp-for="@Model.Question.QuestionType" class="form-control">
            <option value="1">SimpleFourOptions</option>
            <option value="2">Other</option>
        </select>
    </div>
    <div class="mb-3">
        <input asp-for="@Model.Question.IsTimeLimited" type="checkbox" name="IsTimeLimited" value="true" id="time-limited-checkbox" />
        <label asp-for="@Model.Question.IsTimeLimited">Is Time Limited?</label>
    </div>
    <div class="mb-3" id="seconds-division">
        <label asp-for="@Model.Question.TimeLimitSeconds">Seconds</label>
        <input asp-for="@Model.Question.TimeLimitSeconds" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Tags">Tags</label>
        <select asp-for=@Model.Question.Tags asp-items="@Model.AllTags" id="tags" placeholder="select tags" class="form-control dropdown" multiple>
            @*@foreach (var item in Model.Tags)
            {
                <option value=@item.Name>@item.Name</option>
            }*@
        </select>
    </div>


    @if (ViewContext.RouteData.Values["id"] is not null)
    {
        <button asp-page-handler="edit" class="btn btn-success" type="submit">Edit</button>
        <button asp-page-handler="delete" class="btn btn-danger" type="submit">Delete</button>
    }
    else
    {
        <button class="btn btn-success" type="submit">Create</button>
    }
</form>


