@using MarketListener.Application.Features.Question.Queries;
@model ListQuestionQueryDto;

<table class="table table-striped table-bordered table-sm" id="questions-datatable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Text</th>
            <th>QuestionType</th>
            <th>Is Time Limited?</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Text</td>
                <td>@item.QuestionType</td>
                <td>@item.IsTimeLimited</td>
                <td><a class="btn btn-success" asp-page="EditQuestion" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

